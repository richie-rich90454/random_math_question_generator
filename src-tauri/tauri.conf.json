{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Math Question Generator",
    "version": "3.0.0",
    "identifier": "com.richierich.mathgen",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1331",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Math Question Generator",
                "width": 1000,
                "height": 800,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}